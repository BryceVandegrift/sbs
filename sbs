name="Bryce Vandegrift"
website="https://brycevandegrift.xyz/"
blog_dir="blog"
blogindex="blog/index.html"
rssindex="rss.xml"
draft_dir=".drafts"

listDrafts() {
	echo "Printing drafts"
}

delete() {
	echo "Deleting draft"
}

help() {
	echo "help"
}

version() {
	echo "version"
}

case "$1" in
	edit) shift;	"$@" ;;
	delete|del) shift;	"$@" ;;
	help|--h) shift;	help "$@" ;;
	version|--v) shift;	version "$@" ;;
esac
exit 0
